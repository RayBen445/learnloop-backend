# Database Configuration
# 
# For local development:
# Replace with your local PostgreSQL connection string
# Example: DATABASE_URL="postgresql://postgres:password@localhost:5432/learnloop?schema=public"
#
# For deployment (e.g., Render, Railway, Vercel):
# This environment variable will be automatically provided by your hosting platform
# Do not commit actual credentials to version control
#
DATABASE_URL="postgresql://user:password@localhost:5432/learnloop?schema=public"

# JWT Configuration
#
# JWT_SECRET: Secret key for signing JWT tokens
# Generate a strong random string for production (e.g., openssl rand -base64 32)
# This should be different in each environment
#
JWT_SECRET="your-secret-key-here-change-in-production"

# JWT_EXPIRES_IN: Token expiration time
# Examples: "1h", "7d", "30d"
#
JWT_EXPIRES_IN="7d"

# Server Configuration
#
# PORT: Server port (default: 3000)
#
PORT=3000

# CORS Configuration
#
# ALLOWED_ORIGINS: Comma-separated list of additional allowed origins
# Automatically allows *.vercel.app and localhost (in development)
# Use this for custom production domains
# Example: ALLOWED_ORIGINS="https://app.example.com,https://www.example.com"
#
# ALLOWED_ORIGINS=""

# NODE_ENV: Environment mode (production or development)
# Set to "production" in production deployments to enforce strict CORS policies
# Leave unset or set to "development" for local development
#
# NODE_ENV="development"

# Frontend Configuration
#
# FRONTEND_URL: URL of the frontend application
# Used to generate verification links in emails
# Example: FRONTEND_URL="https://app.example.com"
#
FRONTEND_URL="http://localhost:3000"

# Email Configuration (Gmail SMTP)
#
# SMTP_HOST: SMTP server hostname
# For Gmail, use smtp.gmail.com
#
SMTP_HOST="smtp.gmail.com"

# SMTP_PORT: SMTP server port
# 587 for TLS (recommended), 465 for SSL
#
SMTP_PORT=587

# SMTP_USER: Gmail email address
# Example: your-email@gmail.com
#
SMTP_USER="your-email@gmail.com"

# SMTP_PASSWORD: Gmail App Password (NOT your regular Gmail password)
# Generate an App Password from your Google Account settings:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification if not already enabled
# 3. Go to https://myaccount.google.com/apppasswords
# 4. Create an App Password for "Mail"
# 5. Copy the 16-character password and use it here
# Example: SMTP_PASSWORD="abcd efgh ijkl mnop"
#
SMTP_PASSWORD="your-app-password-here"

# SMTP_FROM_NAME: Sender name displayed in emails
# Default: "Cool Shot Systems"
#
SMTP_FROM_NAME="Cool Shot Systems"

# SMTP_FROM_EMAIL: Sender email address (optional)
# If not set, SMTP_USER will be used as the sender email
# Example: SMTP_FROM_EMAIL="noreply@coolshotsystems.com"
#
# SMTP_FROM_EMAIL=""

# System Users Configuration
#
# SYSTEM_USER_EMAIL: Email for system user account
# SYSTEM_USER_PASSWORD: Password for system user account (min 16 chars in production)
# SYSTEM_USER_USERNAME: Username for system user (default: "LearnLoop")
# BOT_USER_EMAIL: Email for bot user account
# BOT_USER_PASSWORD: Password for bot user account (min 16 chars in production)
# BOT_USER_USERNAME: Username for bot user (default: "LearnLoop Bot")
#
# These users are created on server startup and are exempt from rate limiting.
# ⚠️  IMPORTANT: Generate strong passwords (min 16 chars) for production deployment!
# ⚠️  The bootstrap script will abort in production if weak passwords are detected.
#
SYSTEM_USER_EMAIL="system@learnloop.com"
SYSTEM_USER_PASSWORD="REPLACE_WITH_STRONG_PASSWORD_BEFORE_DEPLOYING"
# SYSTEM_USER_USERNAME="LearnLoop"
BOT_USER_EMAIL="bot@learnloop.com"
BOT_USER_PASSWORD="REPLACE_WITH_STRONG_PASSWORD_BEFORE_DEPLOYING"
# BOT_USER_USERNAME="LearnLoop Bot"

# Contact Form Configuration
#
# CONTACT_EMAIL_TO: Email address to receive contact form submissions
# Example: CONTACT_EMAIL_TO="support@coolshotsystems.com"
#
CONTACT_EMAIL_TO="your-email@gmail.com"

# Email Verification Feature Flag
#
# REQUIRE_EMAIL_VERIFICATION: Controls whether email verification is required
# Set to "true" to require email verification before login (recommended for production)
# Set to "false" or leave unset to disable email verification requirement
# When disabled, users are automatically verified on registration
# Note: Verification endpoints remain available even when disabled
#
# REQUIRE_EMAIL_VERIFICATION="true"
